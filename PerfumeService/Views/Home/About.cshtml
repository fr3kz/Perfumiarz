@{
    ViewData["Title"] = "O nas";
}

<!-- HERO -->
<section id="banner"
         style="background-image: url('@Url.Content("~/images/slider-image.jpg")');
                background-size: cover;
                background-position: center;
                height: 50vh;">

    <div class="container h-100">
        <div class="d-flex flex-column justify-content-center align-items-center h-100 text-white">
            <h2 class="display-1 fw-bold text-white">O nas</h2>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center bg-transparent">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home"
                           asp-action="Index"
                           class="text-white text-uppercase text-decoration-none">
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-white text-uppercase">
                        O nas
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</section>


<!-- O NAS -->
<section id="about-us" class="padding-medium">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6">
                <div class="imageblock me-4 position-relative">
                    <img class="img-fluid rounded" src="~/images/about.png" alt="Perfumiarz">

                    <a type="button"
                       data-bs-toggle="modal"
                       data-src="https://www.youtube.com/embed/W_tIumKa8VY"
                       data-bs-target="#myModal"
                       class="play-btn position-absolute top-50 start-50 translate-middle">
                        <svg class="play-icon text-primary" width="70" height="70">
                            <use xlink:href="#play"></use>
                        </svg>
                    </a>
                </div>
            </div>

            <div class="col-lg-6 mt-5 mt-lg-0">

                <h6 class="text-primary">Kim jesteśmy</h6>

                <h3 class="display-5 fw-bold mb-3">
                    Perfumiarz – niezależna weryfikacja autentyczności perfum
                </h3>

                <p>
                    Perfumiarz powstał z pasji do perfum oraz potrzeby walki z
                    coraz większą skalą podróbek obecnych na rynku wtórnym.
                </p>

                <p>
                    Każdego dnia tysiące osób kupuje perfumy na marketplace’ach,
                    w grupach kolekcjonerskich czy komisach internetowych –
                    często nie mając pewności co do ich autentyczności.
                </p>

                <p>
                    Naszym celem jest dostarczanie rzetelnej, eksperckiej i
                    niezależnej opinii opartej wyłącznie na faktach,
                    dokumentacji producentów oraz realnych porównaniach.
                </p>

            </div>
        </div>
    </div>
</section>


<!-- DLACZEGO -->
<section id="feature">
    <div class="container">

        <h6 class="text-primary">Dlaczego Perfumiarz?</h6>
        <h3 class="display-5 fw-bold mb-3">
            Autentyczność nie powinna być domysłem
        </h3>

        <p class="mb-5">
            Rynek podróbek perfum rozwija się szybciej niż kiedykolwiek.
            Naszą misją jest edukacja klientów i eliminowanie ryzyka
            nieuczciwych zakupów.
        </p>

        <div class="row">

            <div class="col-md-3">
                <div class="position-relative">
                    <h2 class="feature-number">01</h2>
                    <h6>Ekspercka analiza</h6>
                    <p>
                        Każda weryfikacja opiera się na setkach detali:
                        flakon, atomizer, szkło, nadruki i batch code.
                    </p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="position-relative">
                    <h2 class="feature-number">02</h2>
                    <h6>Brak automatu</h6>
                    <p>
                        Nie korzystamy z generatorów AI – każdą analizę
                        wykonuje człowiek.
                    </p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="position-relative">
                    <h2 class="feature-number">03</h2>
                    <h6>Transparentność</h6>
                    <p>
                        Klient otrzymuje jasny werdykt wraz z uzasadnieniem.
                    </p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="position-relative">
                    <h2 class="feature-number">04</h2>
                    <h6>Bezpieczeństwo</h6>
                    <p>
                        Chronimy Twoje zdrowie — podróbki nie spełniają norm IFRA.
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- LICZBY -->
<section id="info" class="padding-medium bg-gray">
    <div class="container">
        <div class="row text-center">

            <div class="col-md-3 mb-4">
                <h3 class="display-3 fw-bold text-primary">2000+</h3>
                <h6>Zadowolonych klientów</h6>
            </div>

            <div class="col-md-3 mb-4">
                <h3 class="display-3 fw-bold text-primary">1700+</h3>
                <h6>Wykonanych weryfikacji</h6>
            </div>

            <div class="col-md-3 mb-4">
                <h3 class="display-3 fw-bold text-primary">95%</h3>
                <h6>Wykrytych podróbek</h6>
            </div>

            <div class="col-md-3 mb-4">
                <h3 class="display-3 fw-bold text-primary">24–48h</h3>
                <h6>Średni czas analizy</h6>
            </div>

        </div>
    </div>
</section>


<!-- CTA -->
<section id="contact-info" class="padding-small bg-gray">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">

            <div>
                <h3 class="display-5 fw-bold mb-3">
                    Masz wątpliwości co do swoich perfum?
                </h3>
                <p>
                    Wyślij zdjęcia i otrzymaj rzetelną opinię eksperta.
                </p>
            </div>

            <a asp-controller="Verification"
               asp-action="Create"
               class="btn btn-primary">
                Zweryfikuj perfumy
            </a>

        </div>
    </div>
</section>
