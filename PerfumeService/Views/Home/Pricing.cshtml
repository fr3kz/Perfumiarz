@{
    ViewData["Title"] = "Cennik";
}

<!-- HERO -->
<section id="banner"
         style="background-image: url('@Url.Content("~/images/slider-image2.jpg")');
                background-size: cover;
                background-position: center;
                height: 50vh;">

    <div class="container h-100">
        <div class="d-flex flex-column justify-content-center align-items-center h-100 text-white">
            <h2 class="display-1 fw-bold text-white">Cennik</h2>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center bg-transparent">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home"
                           asp-action="Index"
                           class="text-white text-uppercase text-decoration-none">
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-white text-uppercase">
                        Cennik
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</section>


<!-- WPROWADZENIE -->
<section class="padding-medium">
    <div class="container text-center">

        <h6 class="text-primary">Prosto i uczciwie</h6>
        <h3 class="display-5 fw-bold mb-3">
            Płacisz tylko za realną weryfikację
        </h3>

        <p class="fs-5">
            Bez subskrypcji. Bez ukrytych kosztów.  
            Jedna opłata = jedna profesjonalna analiza.
        </p>

    </div>
</section>


<!-- CENNIK -->
<section id="pricing" class="padding-medium bg-light">
    <div class="container">

        <div class="row justify-content-center">

            <!-- BASIC -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="pricing-box text-center h-100 shadow-sm p-4 bg-white rounded">

                    <h5 class="text-primary">STANDARD</h5>
                    <h2 class="display-4 fw-bold my-3">49 zł</h2>
                    <p class="text-muted">za 1 flakon</p>

                    <ul class="list-unstyled my-4">
                        <li>✔ analiza zdjęć flakonu</li>
                        <li>✔ opakowanie + folia</li>
                        <li>✔ batch code</li>
                        <li>✔ werdykt: oryginał / podróbka</li>
                        <li>✔ czas: 24–48h</li>
                    </ul>

                    <a asp-controller="Verification"
                       asp-action="Create"
                       class="btn btn-outline-primary w-100">
                        Wybierz
                    </a>
                </div>
            </div>

            <!-- PREMIUM -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="pricing-box text-center h-100 shadow p-4 bg-white rounded border border-primary">

                    <span class="badge bg-primary mb-2">Najczęściej wybierany</span>

                    <h5 class="text-primary">PREMIUM</h5>
                    <h2 class="display-4 fw-bold my-3">79 zł</h2>
                    <p class="text-muted">za 1 flakon</p>

                    <ul class="list-unstyled my-4">
                        <li>✔ pełna analiza ekspercka</li>
                        <li>✔ flakon + opakowanie</li>
                        <li>✔ batch + seria produkcyjna</li>
                        <li>✔ szczegółowy opis</li>
                        <li>✔ certyfikat PDF</li>
                        <li>✔ czas: do 24h</li>
                    </ul>

                    <a asp-controller="Verification"
                       asp-action="Create"
                       class="btn btn-primary w-100">
                        Wybierz
                    </a>
                </div>
            </div>

            <!-- EXPRESS -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="pricing-box text-center h-100 shadow-sm p-4 bg-white rounded">

                    <h5 class="text-primary">EXPRESS</h5>
                    <h2 class="display-4 fw-bold my-3">119 zł</h2>
                    <p class="text-muted">za 1 flakon</p>

                    <ul class="list-unstyled my-4">
                        <li>✔ pełna analiza premium</li>
                        <li>✔ priorytet w kolejce</li>
                        <li>✔ odpowiedź do 12h</li>
                        <li>✔ certyfikat PDF</li>
                        <li>✔ kontakt mailowy</li>
                    </ul>

                    <a asp-controller="Verification"
                       asp-action="Create"
                       class="btn btn-outline-primary w-100">
                        Wybierz
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- PAKIETY -->
<section class="padding-medium">
    <div class="container">

        <h3 class="display-5 fw-bold text-center mb-5">
            Pakiety dla kolekcjonerów
        </h3>

        <div class="row justify-content-center text-center">

            <div class="col-md-4 mb-4">
                <div class="border rounded p-4 h-100">
                    <h5>3 flakony</h5>
                    <h2 class="fw-bold">129 zł</h2>
                    <p class="text-muted">43 zł / szt.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="border rounded p-4 h-100">
                    <h5>5 flakonów</h5>
                    <h2 class="fw-bold">199 zł</h2>
                    <p class="text-muted">39 zł / szt.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="border rounded p-4 h-100">
                    <h5>10 flakonów</h5>
                    <h2 class="fw-bold">349 zł</h2>
                    <p class="text-muted">35 zł / szt.</p>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- FAQ -->
<section class="padding-medium bg-light">
    <div class="container">

        <h3 class="display-5 fw-bold text-center mb-4">
            Najczęstsze pytania
        </h3>

        <div class="accordion" id="pricingFaq">

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button"
                            data-bs-toggle="collapse"
                            data-bs-target="#faq1">
                        Czy weryfikacja daje 100% pewności?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        Opinia oparta jest na dostępnych materiałach i doświadczeniu.
                        W zdecydowanej większości przypadków werdykt jest jednoznaczny.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed"
                            data-bs-toggle="collapse"
                            data-bs-target="#faq2">
                        Czy mogę wysłać kilka flakonów naraz?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Tak — dostępne są pakiety zbiorcze widoczne powyżej.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed"
                            data-bs-toggle="collapse"
                            data-bs-target="#faq3">
                        Jak otrzymam wynik?
                    </button>
                </h2>
                <div id="faq3" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Wynik trafia do panelu klienta oraz na e-mail.
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- CTA -->
<section id="contact-info" class="padding-small bg-gray">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">

            <div>
                <h3 class="display-5 fw-bold mb-3">
                    Masz perfumy do sprawdzenia?
                </h3>
                <p>
                    Zrób to zanim będzie za późno.
                </p>
            </div>

            <a asp-controller="Verification"
               asp-action="Create"
               class="btn btn-primary">
                Rozpocznij weryfikację
            </a>

        </div>
    </div>
</section>
